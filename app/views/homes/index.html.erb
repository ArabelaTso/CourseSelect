<div class="container">

  <hr>

  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-info text-center">
        <h1 class="panel-title">目前已经开放的课程</h1>
      </div>
    </div>

  </div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-primary">
        <div class="panel-body" style="min-height: 100px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th style="text-align:center">课程编号</th>
              <th style="text-align:center">课程名称</th>
              <th style="text-align:center">课时/学分</th>
              <th style="text-align:center">限选</th>
              <th style="text-align:center">已选</th>
              <th style="text-align:center">课程属性</th>
              <th style="text-align:center">授课方式</th>
              <th style="text-align:center">考试方式</th>
              <th style="text-align:center">主讲教师</th>

            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>   <!-- #双||表示内部的局部变量 -->
                <tr style="text-align:center">
                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <% if student_logged_in? %>
                   <td> <%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>
                   <% end%>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
