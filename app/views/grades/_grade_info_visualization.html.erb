<div class="panel panel-primary filterable table_border">
  <div id="collapseGradeInfo" class="panel-collapse collapse in">
    <div class="panel-body table_border_trans">
      <div id="Grade_statistic" style="width:100%;height:400px;"></div>
    </div>
    <script type="text/javascript">
        var chart = echarts.init(document.getElementById('Grade_statistic'));

        option = {
            title: {
                text: '成绩分布信息统计',
                x: 'center'
            },
            tooltip: {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            legend: {
                orient: 'vertical',
                left: 'left',
                data: [
                    <% @grade_level.keys.each do |key|%>
                    '<%= key %>',
                    <% end%>
                ]

            },
            series: [
                {
                    type: 'pie',
                    radius: '55%',
                    center: ['50%', '60%'],
                    data: [
                        <% @grade_level.each do |key,value|%>
                        {value:<%= value %>, name: '<%= key %>'},
                        <% end%>
                    ],
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };

        chart.setOption(option);

    </script>
  </div>
</div>