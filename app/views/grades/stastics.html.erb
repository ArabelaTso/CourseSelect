  <div class="row">

    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10">
      <div class="panel panel-primary filterable">
        <div class="panel-heading">
        <h3 class="panel-title">成绩统计</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <%= form_tag("/grades/stastics", method: "post") do %>
                <div class="form-group">
                  <%= render 'grades/grade_select_form', info: @all_semester,
                             submit_name: "semester", name: "学期" %>
                </div>
                <button type="submit" class="btn btn-default">提交</button>
            <% end %>
          </div>
        </div>
      <%= render 'grades/grade_info_visualization' %>
      </div>	  
    </div
  </div>
</div>