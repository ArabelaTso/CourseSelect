<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12" style="text-align:center;">
      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title">
            <% @course = Course.find_by_id(params[:course_id]) %>
              《<%= @course.name %> 》Discuss区
          </h3>
        </div>
                           </br>
        <div id="button-edit">
          
       
       <%= form_for @discusstmp, url: discussion_url(id: @discusstmp.id,course_id: @course.id) ,method: :patch  do |f| %>
          <div class="form-group">
         <%= f.label "请输入匿名发言的内容：", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group input-group-lg">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <% $discusstmp.user="匿名用户" %>
          <%= f.text_field :content, class: 'form-control', placeholder: "输入匿名发言" %>
        </div>
      </div>
    </div>
    

    <%= f.submit '提交', class: "btn btn-success btn-block" %>
    
    <% @discuss << @discusstmp %>
    
    <%= link_to '取消', courses_path, :class => "btn btn-default btn-block" %>
   <% end %>

          <div class="panel-body" style="text-align:left;">
            <div class="table-responsive">
          <tbody>
             <br>
             <% @discuss.each do |discuss| %>
             <td><%= discuss.user %></td>
              <td>(</td>
              <td><%= discuss.created_at %></td>
              <td>): </td>
              <td><%= discuss.content %></td>
              <br>
          <% end %>
          </tbody>
            </div>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>