        <div id="button-edit">
          
       
 <div class="panel-body" style="text-align:left;">
   <div id="container">
     
            <div class="table-responsive">
          <tbody>
             <%if @course.diss == "" %>
                 <td><B>暂时无人发言！</B></td>
             <% end %>
             <% @test = @course.diss.split("匿名用户：")%>
              <% @judge ="" %>
              <% @test.each do |test| %>
                <% if test!="暂无人发言" and test != "" %>
                  <% if @judge.include? test   %>
                  <% else %>
                     	<div class="tip-bubble tip-bubble-left">
                      <td><B>匿名用户：</B></td
                      
                      <td><%= test%></td>
                       </div>
                            
                      <% @judge+=test %>
                  <% end %>
              <% end %>
             <% end %>
             
    
          </tbody>
            </div>
          </div>


