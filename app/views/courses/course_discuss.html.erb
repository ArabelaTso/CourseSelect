 <style type="text/css">
			#container{
				padding-top: 10px;
			}
			
			h1{
				font-size: 28px;
				margin: 50px;
			}
			
			/* bubble */
			.tip-bubble {
			  position: relative;
			  background-color: #436EEE;
			  width: 500px;
			  padding: 20px;
			  color: #080808;
			  text-align: left;
			  border-radius: 10px;
			  margin: 50px;
			}
			 .tip-bubble:after {
			  content: '';
			  position: absolute;
			  width: 0;
			  height: 0;
			  border: 15px solid;
			}
			 
			.tip-bubble-left:after {
			  border-right-color: #202020;
			  top: 50%;
			  right: 100%;
			  margin-top: -15px;
			}
		
        </style>
 
  <div class="container-fluid">
