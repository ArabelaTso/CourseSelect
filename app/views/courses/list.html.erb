<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <%= form_tag("/courses/choose_course", method: "post") do %>
            <table class="table table-striped table-hover">
              <thead>
              <tr>
                <th>课程编号</th>
                <th>课程名称</th>
                <th>课时/学分</th>
                <th>限选</th>
                <th>已选</th>
                <th>课程属性</th>
                <th>授课方式</th>
                <th>考试方式</th>
                <th>主讲教师</th>

              </tr>
              </thead>
              <tbody>

              <% @course_to_choose.each do |course_to_choose| %>   <!-- #双||表示内部的局部变量 -->
                  <tr>
                    <td><%= check_box_tag 'course_to_choose[]', course_to_choose.id%></td>
                    <td><%= course_to_choose.course_code %></td>
                    <td><%= course_to_choose.name %></td>
                    <td><%= course_to_choose.credit %></td>
                    <td><%= course_to_choose.limit_num %></td>
                    <td><%= course_to_choose.student_num %></td>
                    <td><%= course_to_choose.course_type %></td>
                    <td><%= course_to_choose.teaching_type %></td>
                    <td><%= course_to_choose.exam_type %></td>
                    <td><%= course_to_choose.teacher.name %></td>
                    <td><%= link_to "加入课程", select_course_path(course_to_choose), class: 'btn-sm btn-info' %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
            <button type="submit" class="btn btn-default">提交</button>
          <%end %>
        </div>
      </div>
      <%= render 'courses/curriculum_table' %>
    </div>
  </div>
</div>


